<div class="card">

    <div class="card-header">
        @book.title
    </div>
    <div class="card-body">
        <blockquote class="blockquote mb-0">
            <p>@book.publishDate</p>
            <p>@book.description</p>
            <footer class="blockquote-footer">@book.excerpt <cite title="Source Title">Source Title</cite></footer>
        </blockquote>
    </div>
</div>

@code {


    [Parameter]
    public Book book { get; set; }

}
